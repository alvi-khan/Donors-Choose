<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NonMonetaryDonation">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:translationX="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa"
                android:onClick="goHome"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Home"
                android:textAlignment="viewStart"
                android:textColor="#EBFFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#69CAED"
                app:icon="@drawable/home_icon"
                app:iconPadding="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa"
                android:onClick="loadUser"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Profile"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                app:backgroundTint="#69CAED"
                app:icon="@drawable/ic_action_name2"
                app:iconPadding="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa"
                android:onClick="logout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Logout"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                app:backgroundTint="#69CAED"
                app:icon="@drawable/ic_baseline_power_settings_new_24"
                app:iconPadding="15dp" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"
            android:fontFamily="@font/coda"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Donors Choose"
            android:textColor="#228CAA"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/menuButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:onClick="openMenu"
            android:padding="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Personal Details"
                android:textColor="#100F0F"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/donorName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/donorEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/donorPhone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Contact No"
                android:inputType="phone"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pickUpAddress"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Pick-up Address"
                android:inputType="textPostalAddress"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:text="Donation Details"
                android:textColor="#100F0F"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/donationData"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Donation type\n(food, clothing, etc.)"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/salsa"
                android:onClick="sendData"
                android:text="Send to charity"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#69CAED" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/menuBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63BABABA"
        android:onClick="closeMenu"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="5dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>